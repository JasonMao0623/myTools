/* pages/kuaidi/kuaidi.wxss */
@import "../../utils/style/normalize.wxss";
@import "../../utils/style/theme.wxss";
image{
  width: 60rpx;
  height: 60rpx;
}
.container{
  font-size: 40rpx;
}
.line{
  display: flex;
  flex-direction: row;
  height: 60rpx;
  line-height: 60rpx;
  width: 70%;
  margin: 0 auto;
  margin-top: 80rpx;
}
.oddNum{
  margin-top: 280rpx;
}
.line input,.company{
  margin-left: 30rpx;
  height: 60rpx;
  width: 80%;
  border-bottom: solid 1rpx;
}
/* .company{
  margin-left: 30rpx;
  height: 60rpx;
  width: 80%;
  border-bottom: solid 1rpx;
} */
.line image:last-child{
  width: 50rpx;
  height: 50rpx;
  margin-top: 10rpx;
  margin-left: 20rpx;
}
button{
  width: 70%;
  margin-top:100rpx;
  background: #bfbfbf;
  color: white;
}
.blue{
  background: #1296db;
}
.warn{
  margin-top: 100rpx;
  color: red;
  opacity: 0;
}
.warn-true{
  animation: opacity 5000ms linear;
}
.warn-false{
  opacity: 0;
}

@keyframes opacity{
  from{opacity: 1}
  to{opacity: 0}
}